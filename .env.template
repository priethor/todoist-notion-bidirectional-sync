# Notion API Configuration
# Get from: https://www.notion.so/my-integrations
NOTION_API_KEY=secret_your_notion_integration_token_here

# Notion Database IDs
# Get from database share URLs (32-character ID after the last dash)
NOTION_TASK_DATABASE_ID=your_tasks_database_id_here
NOTION_AREAS_DATABASE_ID=your_areas_database_id_here

# Todoist Webhook Configuration
# Get from: Todoist Developer Console -> Your App -> Webhooks -> Client Secret
TODOIST_CLIENT_SECRET=your_todoist_webhook_client_secret_here

# Application Configuration
PORT=5000
LOG_LEVEL=INFO